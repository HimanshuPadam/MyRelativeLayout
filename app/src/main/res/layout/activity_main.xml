<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a number"
        android:id="@+id/tvNum"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:textSize="40sp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNum"
        android:layout_centerHorizontal="true"
        android:id="@+id/etInputNum"
        android:inputType="number"
        android:textSize="30sp"
        android:hint="number upto 5 digits"
        android:maxLength="5"
        android:layout_marginLeft="30sp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_marginTop="20sp"
        android:textSize="20sp"
        android:layout_below="@+id/etInputNum"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnOk"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tvNumber"
        android:layout_centerInParent="true"
        android:textSize="50sp"
        android:padding="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="20sp"
        android:id="@+id/btnPlus"
        android:layout_toStartOf="@+id/tvNumber"
        android:layout_centerVertical="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="20sp"
        android:id="@+id/btnMinus"
        android:layout_toEndOf="@+id/tvNumber"
        android:layout_centerVertical="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="20sp"
        android:id="@+id/btnMul"
        android:layout_above="@+id/tvNumber"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="20sp"
        android:id="@+id/btnDiv"
        android:layout_below="@+id/tvNumber"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:textSize="20sp"
        android:id="@+id/btnClear"
        android:layout_below="@+id/btnDiv"
        android:layout_marginTop="50sp"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>



